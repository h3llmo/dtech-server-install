Vagrant.configure("2") do |config|
    config.vm.define "vm1" do |vm1|
        vm1.vm.box = "minimal/centos7"
        vm1.vm.hostname = 'vm1'
        vm1.vm.box_url = "https://vagrantcloud.com/minimal/centos7"
        vm1.vm.box_version = "7.0"
    end
    
    config.vm.provider "virtualbox" do |v|
        v.name = "devops"
        v.gui = false
        v.customize ["modifyvm", :id, "--memory", "512", "--cpus", "1"]
    end
end